@model IEnumerable<ThesesSystem.Web.Areas.Administration.ViewModels.Theses.ThesisViewModel>

@{
    ViewBag.Title = "Дипломни работи";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добави архивна дипломна работа", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
           
            <td>
                @Html.ActionLink("Детайли", "Details", new { id = item.Id })
                @using (Html.BeginForm("Delete", "Theses", new { area = "Administration", id = item.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <span data-id="@item.Id" class="sweet-@(item.Id + 10) span-submit" onclick="_gaq.push(['_trackEvent', 'example', 'try', 'sweet-@(item.Id + 10)']);">Изтрий</span>

                    <input id="btn-submit-@item.Id" type="submit" name="name" value="Създай" class="hidden btn btn-danger" />
                }
            </td>
        </tr>
    }
</table>
@section styles {
    @Styles.Render("~/Content/sweetalert")
}

@section scripts
{
    @Scripts.Render("~/bundles/sweetalert")

    <script>
        function sendForm(id) {
            $('#btn-submit-' + id).click();
        }

        function onClick() {
            var $this = $(this);

            swal({
                title: "Сигурни ли сте, че искате да изтриете този запис?",
                type: "success",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: 'Изтрий!',
                cancelButtonText: 'Отказ',
            },
            function (isConfirm) {
                if (isConfirm) {
                    var id = $this.attr('data-id');
                    sendForm(id);
                }
            });
        };

        var sweets = $('.span-submit');
        sweets.on('click', onClick);
    </script>
}