@model ThesesSystem.Web.Areas.Administration.ViewModels.ThesisTutorials.ThesisTutorialUpdateViewModel

@{
    ViewBag.Title = "Промяна на наръчник";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "ThesisTutorials", new { area = "Administration" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Archive, new { @class = "col-md-offset-2 col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Archive, new { type = "file", accept = ".rar,.tar,.zip,.7z,.bz,.bz2" })
                @Html.ValidationMessageFor(model => model.Archive, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeacherId, "TeacherId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.EditorFor(model => model.TeacherId, new { htmlAttributes = new { @class = "hidden" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreatedOn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreatedOn, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.CreatedOn, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
