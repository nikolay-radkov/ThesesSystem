@model ThesesSystem.Web.ViewModels.Evaluation.CreateReviewViewModel
@{
    ViewBag.Title = "Добавяне на реценция";
}
<h2>@ViewBag.Title</h2>

<p class="validateTips">Всички полета са задължителни</p>

@using (Html.BeginForm("AddReview", "Thesis", new { id = Model.Id, area = string.Empty }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Archive, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Archive, new { type = "file", accept = ".rar,.tar,.zip,.7z,.bz,.bz2", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Archive, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Mark, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Mark, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Mark, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReviewerId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("ReviewerId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ReviewerId, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="text-center">
        <input type="submit" class=" btn btn-success" value="Добави" />
    </div>

}
