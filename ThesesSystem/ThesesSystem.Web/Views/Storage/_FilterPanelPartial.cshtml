@model ThesesSystem.Web.ViewModels.Filters.FilterOptions

<div class="row">
    @using (Html.BeginForm("Index", "Storage", FormMethod.Get))
    {
        <div class="text-center">
            <div class="panel panel-success">
                <div class="panel-heading">Филтрирай по:</div>
                <div class="panel-body">
                    @Html.EditorFor(m => m.KeyWord, new { htmlAttributes = new { @class = "form-control", placeholder = "Ключова дума.." } })
                    @Html.EnumDropDownListFor(m => m.FilterBy, new { @class = "form-control" })
                </div>

                <div class="panel-heading">Сортирай по:</div>
                <div class="panel-body">
                    @Html.EnumDropDownListFor(m => m.SortBy, new { @class = "form-control" })
                    @Html.EnumDropDownListFor(m => m.SortType, new { @class = "form-control" })
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Филтрирай" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</div>

